        "vi": {
            "!comment" : "Nintendo Vi...not clear if Go can be compiled for Nintendo platforms",
            "go:build": "!ignore",
            "go:imports": []
        },
        "ios": {
            "go:build": "ios",
            "go:imports": []
        },
        "macos": {
            "go:build": "darwin",
